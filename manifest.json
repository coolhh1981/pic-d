{
  "manifest_version": 3,
  "name": "Image Hover & Download",
  "version": "1.1.0",
  "description": "鼠标悬停时显示圆形光标，右键点击可直接下载图片",
  "permissions": [
    "downloads",
    "activeTab",
    "storage",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.x.ai/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": [
        "html2canvas.min.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
} 